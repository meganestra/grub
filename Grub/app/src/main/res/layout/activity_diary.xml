<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diary"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="75sp"
        android:layout_gravity="center"
        android:includeFontPadding="true"/>

    <TextView
        android:id="@+id/diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="75sp"
        android:layout_gravity="center"
        android:includeFontPadding="true"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="75sp"
        android:layout_gravity="center"
        android:includeFontPadding="true"/>

    <TextView
        android:id="@+id/table_breakfast_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breakfast"/>

    <TableLayout
        android:id="@+id/table_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:textAlignment="center">
        <TableRow>
            <TextView android:text="Description"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:textSize="25sp"/>
            <TextView android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Measure"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Calories"
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:textSize="25sp">
            </TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/table_lunch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lunch"/>

    <TableLayout
        android:id="@+id/table_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:textAlignment="center">
        <TableRow>
            <TextView android:text="Description"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:textSize="25sp"/>
            <TextView android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Measure"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Calories"
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:textSize="25sp">
            </TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/table_dinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dinner"/>

    <TableLayout
        android:id="@+id/table_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:textAlignment="center">
        <TableRow>
            <TextView android:text="Description"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:textSize="25sp"/>
            <TextView android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Measure"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Calories"
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:textSize="25sp">
            </TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/table_snacks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="snacks"/>

    <TableLayout
        android:id="@+id/table_snacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:textAlignment="center">
        <TableRow>
            <TextView android:text="Description"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:textSize="25sp"/>
            <TextView android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Measure"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textSize="25sp">
            </TextView>
            <TextView android:text="Calories"
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:textSize="25sp">
            </TextView>
        </TableRow>
    </TableLayout>


</LinearLayout>